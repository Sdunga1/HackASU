{
  "mcpServers": {
    "HackASU": {
      "command": "/path/to/hackasu_mcp/venv/bin/python",
      "args": ["/path/to/hackasu_mcp/cli.py"],
      "env": {
        "GITHUB_TOKEN": "your_github_token_here",
        "JIRA_URL": "https://your-domain.atlassian.net",
        "JIRA_EMAIL": "your_email@example.com",
        "JIRA_API_TOKEN": "your_jira_api_token",
        "BACKEND_API_URL": "http://localhost:8000"
      }
    }
  }
}

// IMPORTANT: 
// 1. Replace the paths with your actual paths
// 2. Add your GitHub token (get from https://github.com/settings/tokens)
// 3. Add your Jira credentials (optional - server works without them)
// 4. Copy this to ~/.cursor/mcp.json (or merge with existing config)
// 5. Restart Cursor

// To get GitHub token:
// 1. Go to https://github.com/settings/tokens
// 2. Click "Generate new token (classic)"
// 3. Select scopes: repo, read:org (if needed)
// 4. Copy the token and paste it above

// To get Jira credentials (optional):
// 1. Jira Cloud: https://id.atlassian.com/manage-profile/security/api-tokens
// 2. Generate API token
// 3. Use your email and the API token
